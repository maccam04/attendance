<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SeatView">
        <attr name="seatViewBackgroundColor" format="string" />
        <attr name="cinemaScreenViewText" format="string" />
        <attr name="cinemaScreenViewBackgroundColor" format="string" />
        <attr name="cinemaScreenViewTextColor" format="string" />
        <attr name="centerLineWidth" format="float" />
        <attr name="centerLineColor" format="string" />
        <attr name="thumbSeatViewBackgroundColor" format="string" />
        <attr name="thumbSeatViewPointerColor" format="string" />
        <attr name="thumbSeatViewPointerWidth" format="float" />
        <attr name="cinemaScreenViewSide" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>

        <attr name="cinemaScreenViewActive" format="boolean" />
        <attr name="centerLineActive" format="boolean" />
        <attr name="thumbSeatViewActive" format="boolean" />
        <attr name="seatNamesBarActive" format="boolean" />
        <attr name="zoomActive" format="boolean" />
        <attr name="zoomAfterClickActive" format="boolean" />
    </declare-styleable>

</resources>